#include <stdio.h>

int main()
{
	int n, i, sum = 0;
	float avg = 0;

	printf("Enter the size of Array  = ");
	scanf("%d", &n);

	int arr[n];

	printf("Enter the Array Elements : ");
	for (i = 0; i < n; i++)
	{
		scanf("%d", &arr[i]);
	}

	for (i = 0; i <n; i++)
	{
		sum = sum + arr[i];
	}

	avg = (float)sum /n;

	printf("\nThe Size  of Array Elements     = %d\n", n);
	printf("\nThe Average of Array Elements = %.2f\n", avg);
}
